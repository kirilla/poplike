@page "/language"
@model SwitchLanguageModel
@{
}

@section Meta {
    <title>
        Språk - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-lg-10 col-xl-8 col-xxl-6">

            <h4 class="ms-2 mt-3 mb-3">
                <i>
                    språk
                </i>
            </h4>
            
            @foreach (var language in Model.Languages)
            {
                var cultureInfo = new CultureInfo(language.Culture);

                <form method="post" role="form" class="mt-3">
                    <input type="hidden" asp-for="SelectedCulture"
                       value="@(cultureInfo.Name)" />

                    <button type="submit" class="btn btn-outline-secondary">
                        <div>
                            <span>@(language.Emoji)</span>
                            <span>@(cultureInfo.DisplayName)</span>
                        </div>
                    </button>
                </form>
            }

            <br />

            <form method="post" role="form" class="mt-3">
                <input type="hidden" asp-for="SelectedCulture" value="@(null)" />

                <button type="submit" class="btn btn-outline-secondary">
                    💻
                    webbläsarens inställning
                </button>
            </form>

        </div>
    </div>
</main>
