@page "/language/add"
@model AddLanguageModel
@{
}

@section Meta {
    <title>
        Lägg till språk - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-3">
                <i>
                    lägg till ett språk
                </i>
            </h4>

            <form method="post" role="form">

                <label asp-for="CommandModel.Name" class="form-label ms-2">
                    Språket
                </label>

                <input asp-for="CommandModel.Name" class="form-control" placeholder="" />

                <label asp-for="CommandModel.Culture" class="form-label ms-2 mt-3">
                    Kulturkod
                </label>

                <input asp-for="CommandModel.Culture" class="form-control" placeholder="en-US" />

                <label asp-for="CommandModel.Emoji" class="form-label ms-2 mt-3">
                    Emoji
                </label>

                <input asp-for="CommandModel.Emoji" class="form-control"
                       placeholder="flagga" />

                <div asp-validation-summary="All"></div>

                <div class="mt-3">
                    <a href="/language/all" class="btn btn-outline-secondary me-2">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Lägg till
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
