@page "/account/signup"
@model SignUpModel
@{
}

@section Meta {
    <title>
        Be om ett konto - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-4">
            <i>
                vill du ha ett konto?
            </i>
        </h4>

        <form method="post" role="form">
            <div class="mt-3">
                <label asp-for="CommandModel.Email" class="form-label ms-2">
                    Din epostadress
                </label>
                <input asp-for="CommandModel.Email" class="form-control" />
            </div>

            <div asp-validation-summary="All"></div>

            <div class="mt-4">
                <a href="/" class="btn btn-outline-secondary me-2">
                    Avbryt
                </a>

                <input type="submit" class="btn btn-primary"
                       value="Skicka inbjudan" />
            </div>

        </form>

    </div>
</main>
