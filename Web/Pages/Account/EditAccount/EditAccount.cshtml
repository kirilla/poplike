@page "/account/editaccount/"
@model EditAccountModel
@{
}

@section Meta {
    <title>
        Redigera konto - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                redigera konto
            </i>
        </h4>
        
        <form method="post" role="form">
        
            <label asp-for="CommandModel.Name" class="form-label ms-2">
                Namn
            </label>
            <input asp-for="CommandModel.Name" class="form-control" />

            <label asp-for="CommandModel.Email" class="form-label mt-3  ms-2">
                Epost
            </label>
            <input asp-for="CommandModel.Email" class="form-control" />

            <div class="form-check noselect ms-2 mt-3">
                <input asp-for="CommandModel.IsHidden" class="form-check-input" type="checkbox" />
                <label asp-for="CommandModel.IsHidden" class="form-check-label">
                    Dolt konto
                </label>
            </div>

            <div asp-validation-summary="All" class="mt-3"></div>

            <div class="mt-4">
                <a class="btn btn-outline-secondary me-2"
                   href="/account/showaccount">
                    Avbryt
                </a>

                <input type="submit" class="btn btn-secondary"
                       value="Spara" />
            </div>
        
        </form>
    </div>
</main>
