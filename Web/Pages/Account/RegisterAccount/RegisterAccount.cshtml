@page "/account/registeraccount"
@model RegisterAccountModel
@{
}

@section Meta {
    <title>
        Skapa ett konto - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-4">
            Vill du skapa ett konto?
        </h4>

        <form method="post" role="form">

            <label asp-for="CommandModel.Name" class="form-label mt-3">
                Ditt namn
            </label>

            <input asp-for="CommandModel.Name" class="form-control" />

            <label asp-for="CommandModel.Email" class="form-label mt-3">
                Epost
            </label>

            <input asp-for="CommandModel.Email" class="form-control" />

            <label asp-for="CommandModel.Password" class="form-label mt-3">
                Lösenord
            </label>
            <input asp-for="CommandModel.Password" class="form-control" type="password" />

            <div class="form-check noselect ms-2 mt-3">
                <input asp-for="CommandModel.IsHidden" class="form-check-input" type="checkbox" />
                <label asp-for="CommandModel.IsHidden" class="form-check-label">
                    Gör kontot dolt.
                </label>
            </div>

            <div asp-validation-summary="All" class="mt-3"></div>

            <div class="d-grid col-12 mt-4">
                <input type="submit" class="btn btn-primary" value="Skapa konto" />
            </div>

        </form>

    </div>
</main>
