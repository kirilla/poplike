@page "/word/add"
@model AddWordModel
@{
}

@section Meta {
    <title>
        Lägg till ord - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-3">
                <i>
                    lägg till ett ord
                </i>
            </h4>

            <form method="post" role="form">

                <label class="form-label ms-2" asp-for="CommandModel.Value">
                    Ordet
                </label>
                <input asp-for="CommandModel.Value" class="form-control" placeholder="" />

                <div asp-validation-summary="All"></div>

                <div class="mt-3">
                    <a href="/legal/words" class="btn btn-outline-secondary me-2">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Lägg till
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
