@page "/subject/delete/{id:int}"
@model DeleteSubjectModel
@{
}

@section Meta {
    <title>
        Ta bort ämne - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>ta bort ämnet</i>

                <span class="ms-2" style="font-size:smaller">
                    <a href="/subject/show/@(Model.Subject.Id)"
                       class="text-decoration-none">
                        @(Model.Subject.Category.Emoji)
                        @(Model.Subject.Name)
                    </a>
                </span>
            </h4>

            <form method="post" role="form">

                <input type="hidden" asp-for="CommandModel.Id" />

                <div class="form-check noselect ms-3 mt-3">
                    <input asp-for="CommandModel.Confirmed" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" for="CommandModel_Confirmed">
                        Ja, jag är säker
                    </label>
                </div>

                <div asp-validation-summary="All"></div>

                <div class="mt-4">
                    <a role="button" class="btn btn-secondary me-2"
                       href="/subject/curate/@(Model.CommandModel.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-danger me-2">
                        Ta bort
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
