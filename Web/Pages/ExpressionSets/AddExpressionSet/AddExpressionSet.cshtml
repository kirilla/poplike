@page "/expressionset/add"
@model AddExpressionSetModel
@{
}

@section Meta {
    <title>
        Lägg till svarsalternativ -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-3">
                <i>
                    lägg till
                </i>

                <span class="ms-2" style="font-size:smaller">
                    <a href="/expressionset/all"
                       class="text-decoration-none">
                        svarsalternativ
                    </a>
                </span>
            </h4>

            <h5 class="mt-4 ms-2">
                <i>
                    1-5 uttryck
                </i>
            </h5>

            <form method="post" role="form">

                <div class="card">
                    <div class="card-body">

                        <label asp-for="CommandModel.Expression1"
                               class="form-label">
                            Emojis, ord eller korta fraser
                        </label>

                        <input asp-for="CommandModel.Expression1" class="form-control"
                               placeholder="..." />

                        <input asp-for="CommandModel.Expression2" class="form-control mt-3"
                               placeholder="..." />

                        <input asp-for="CommandModel.Expression3" class="form-control mt-3"
                               placeholder="..." />

                        <input asp-for="CommandModel.Expression4" class="form-control mt-3"
                               placeholder="..." />

                        <input asp-for="CommandModel.Expression5" class="form-control mt-3"
                               placeholder="..." />

                        <div class="form-check noselect ms-2 mt-3">
                            <input asp-for="CommandModel.MultipleChoice" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="CommandModel.MultipleChoice">
                                Tillåt flera val
                            </label>
                        </div>

                        <div class="form-check noselect ms-2 mt-3">
                            <input asp-for="CommandModel.FreeExpression" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="CommandModel.FreeExpression">
                                Tillåt egna svar
                            </label>
                        </div>

                    </div>
                </div>

                <h5 class="mt-4 ms-2">
                    <i>
                        sammanfattning
                    </i>
                </h5>

                <div class="card">
                    <div class="card-body">

                        <label asp-for="CommandModel.Emoji" class="form-label">
                            Symbol
                        </label>
                        <input asp-for="CommandModel.Emoji" class="form-control"
                               placeholder=":)" />

                        <label asp-for="CommandModel.Name" class="form-label mt-3">
                            Sammanfattning
                        </label>
                        <input asp-for="CommandModel.Name" class="form-control"
                               placeholder="glad, gladare, gladast" />
                    </div>
                </div>

                <div asp-validation-summary="All" class="mt-3"></div>

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2" href="/expressionset/all">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary ms-auto">
                        Lägg till
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
