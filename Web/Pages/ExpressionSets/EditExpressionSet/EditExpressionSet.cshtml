@page "/expressionset/edit/{id:int}"
@model EditExpressionSetModel
@{
}

@section Meta {
    <title>
        Redigera svarsalternativ - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    redigera
                </i>

                <span class="ms-2" style="font-size:smaller">
                    <a href="/expressionset/show/@(Model.ExpressionSet.Id)"
                       class="text-decoration-none">
                        @(Model.ExpressionSet.Emoji)
                        @(Model.ExpressionSet.Name)
                    </a>
                </span>
            </h4>
            
            <form method="post" role="form">
                <input type="hidden" asp-for="CommandModel.Id" />

                <label asp-for="CommandModel.Emoji" class="form-label">
                    Symbol
                </label>

                <input asp-for="CommandModel.Emoji" class="form-control"
                       placeholder=":)" />

                <label asp-for="CommandModel.Name" class="form-label mt-3">
                    Sammanfattning
                </label>

                <input asp-for="CommandModel.Name" class="form-control"
                       placeholder="glad, gladare, gladast" />

                <div class="form-check noselect ms-2 mt-3">
                    <input asp-for="CommandModel.MultipleChoice" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="CommandModel.MultipleChoice">
                        Tillåt flera val
                    </label>
                </div>

                <div class="form-check noselect ms-2 mt-3">
                    <input asp-for="CommandModel.FreeExpression" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="CommandModel.FreeExpression">
                        Tillåt egna svar
                    </label>
                </div>

                <div asp-validation-summary="All" class="col-12"></div>

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/expressionset/show/@(Model.CommandModel.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Spara
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
