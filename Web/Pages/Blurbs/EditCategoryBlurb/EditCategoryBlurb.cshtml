@page "/category/editblurb/{id:int}"
@model EditCategoryBlurbModel
@{
}

@section Meta {
    <title>
        Redigera text - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    redigera text
                </i>
            </h4>

            <form method="post" role="form">

                <div asp-validation-summary="All" class="col-12"></div>

                <input type="hidden" asp-for="CommandModel.Id" />

                <label asp-for="CommandModel.Text" class="form-label mt-3">
                    Text
                </label>

                <textarea asp-for="CommandModel.Text" class="form-control" rows="6"></textarea>

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/category/curate/@(Model.Category.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Spara
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
