@page "/subject/removekeyword/{id:int}"
@model RemoveKeywordModel
@{
}

@section Meta {
    <title>
        Ta bort nyckelord - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    ta bort nyckelordet
                    <span class="text-decoration-underline text-primary">
                        @(Model.Keyword.Word)
                    </span>
                </i>
            </h4>

            <form method="post" role="form">

                <div asp-validation-summary="All" class="col-12"></div>

                <input type="hidden" asp-for="CommandModel.Id" />

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/subject/curate/@(Model.Subject.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Ta bort
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
