@page "/invitation/accept/{guid:guid}"
@model AcceptInvitationModel
@{
}

@section Meta {
    <title>
        Skapa konto -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                vill du skapa ett konto?
            </i>
        </h4>

        @if (Model.UserToken.IsAuthenticated)
        {
            <div class="alert alert-warning">
                Du behöver logga ut innan du svarar på inbjudan
            </div>
        }

        <form method="post" role="form">
            <input asp-for="CommandModel.Guid" type="hidden" />

            <label for="CommandModel_Name" class="form-label mt-1 ms-2">
                Ditt namn
            </label>
            <input asp-for="CommandModel.Name" class="form-control" />

            <label for="CommandModel_PhoneNumber" class="form-label mt-3 ms-2">
                Mobilnummer
            </label>
            <input asp-for="CommandModel.PhoneNumber" class="form-control" />

            <label for="CommandModel_Password" class="form-label mt-3 ms-2">
                Lösenord
            </label>
            <input asp-for="CommandModel.Password" class="form-control" type="password" />

            <div class="form-check noselect ms-2 mt-3 ms-2">
                <input asp-for="CommandModel.IsHidden" class="form-check-input" type="checkbox" />
                <label asp-for="CommandModel.IsHidden" class="form-check-label">
                    Dolt konto
                </label>
            </div>

            <div asp-validation-summary="All" class="mt-3"></div>

            @*<div class="alert alert-warning mt-3">
                <div class="mb-1">
                    ⚖️ Användarvillkor
                </div>
                <div>
                    ...
                </div>
            </div>*@

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    Skapa konto
                </button>
            </div>
        </form>

    </div>
</main>
