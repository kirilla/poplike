@page "/user/public"
@model ShowUsersModel
@{
}

@section Meta {
    <title>
        Användare - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="mt-3 col-12 col-md-4">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                användare
            </i>
        </h4>

        <div class="mt-3">
            <ul class="list-unstyled">
                @foreach (var user in Model.Users)
                {
                    <li>
                        @(Branding.UserEmoji)
                        <a href="/user/show/@(user.Id)">@user.Name</a>
                    </li>
                }
            </ul>
        </div>

    </div>
</main>
