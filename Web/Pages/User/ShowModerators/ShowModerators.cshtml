@page "/user/moderators"
@model ShowModeratorsModel
@{
}

@section Meta {
    <title>
        Moderatorer -
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="mt-3 col-12 col-md-4">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                moderatorer
            </i>
        </h4>

        <div class="mt-3">
            <ul class="list-unstyled">
                @foreach (var user in Model.Users)
                {
                    <li>
                        @(Branding.ModeratorEmoji)
                        <a href="/user/show/@(user.Id)">@(user.Name)</a>
                    </li>
                }
            </ul>
        </div>

        <h4 class="ms-2 mt-3 mb-3"><i>vad gör de?</i></h4>
        <div class="mt-3">
            <ul>
                <li>
                    Ser till att användarna följer reglerna.
                </li>
            </ul>
        </div>

    </div>
</main>
