@page "/user/delete/{id:int}"
@model DeleteUserModel
@{
}

@section Meta {
    <title>
        Ta bort användare - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                ta bort användaren
                <span class="text-decoration-underline">@Model.User.Name</span>?
            </i>
        </h4>

        <form method="post" role="form">

            <input type="hidden" asp-for="CommandModel.Id" />
            <input type="hidden" asp-for="CommandModel.Name" />

            <div class="form-check noselect ms-2 mb-4">
                <input asp-for="CommandModel.Confirmed" class="form-check-input" type="checkbox" />
                <label class="form-check-label" for="CommandModel_Confirmed">
                    Ja, jag är säker
                </label>
            </div>

            <div asp-validation-summary="All"></div>

            <div class="mt-2">

                <a role="button" class="btn btn-outline-secondary me-2"
                   href="/user/show/@(Model.CommandModel.Id)">
                    Avbryt
                </a>

                <button type="submit" class="btn btn-danger me-2">
                    Ta bort
                </button>
            </div>

        </form>
    </div>
</main>
