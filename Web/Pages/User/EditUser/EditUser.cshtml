@page "/user/edit/{id:int}"
@model EditUserModel
@{
}

@section Meta {
    <title>
        Redigera användare - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-md-6">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                redigera användaren
                <span class="text-decoration-underline">@(Model.CommandModel.Name)</span>?
            </i>
        </h4>

        <form method="post" role="form">

            <input type="hidden" asp-for="CommandModel.Id" />

            <div class="row g-2">

                <div class="col-12">
                    <label asp-for="CommandModel.Name" class="form-label">
                        Namn
                    </label>
                    <input asp-for="CommandModel.Name" class="form-control" />
                </div>

                <div asp-validation-summary="All" class="col-12"></div>

            </div>

            <div class="mt-2">
                <a class="btn btn-outline-secondary me-2" 
                   href="/user/show/@(Model.CommandModel.Id)">
                    Avbryt
                </a>

                <button type="submit" class="btn btn-secondary">
                    Spara
                </button>
            </div>

        </form>
    </div>
</main>
