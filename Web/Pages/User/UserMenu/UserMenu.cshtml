@page "/user/menu"
@model UserMenuModel
@{
}

@section Meta {
    <title>
        Användare - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-8">

            <h4 class="ms-2 mt-3 mb-3">
                <i>
                    användare
                </i>
            </h4>

            <div class="mt-3 col-12 col-md-8">

                <div class="list-group">

                    <a href="/user/public"
                       class="list-group-item list-group-item-action">
                        <span class="list-group-icon-long">
                            @(Branding.UserEmoji)
                        </span>
                        <span class="list-group-label ms-1">
                            användare
                        </span>
                    </a>

                    <a href="/user/curators"
                       class="list-group-item list-group-item-action">
                        <span class="list-group-icon-long">
                            @(Branding.CuratorEmoji)
                        </span>
                        <span class="list-group-label ms-1">
                            medskapare
                        </span>
                    </a>

                    <a href="/user/moderators"
                       class="list-group-item list-group-item-action">
                        <span class="list-group-icon-long">
                            @(Branding.ModeratorEmoji)
                        </span>
                        <span class="list-group-label ms-1">
                            moderatorer
                        </span>
                    </a>

                    <a href="/user/admins"
                       class="list-group-item list-group-item-action">
                        <span class="list-group-icon-long">
                            @(Branding.AdminEmoji)
                        </span>
                        <span class="list-group-label ms-1">
                            administratörer
                        </span>
                    </a>

                </div>

            </div>

        </div>
    </div>

</main>
