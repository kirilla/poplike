@page "/category/editcontact/{id:int}"
@model EditCategoryContactModel
@{
}

@section Meta {
    <title>
        Redigera kontakt - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    redigera kontakten
                </i>
            </h4>

            <form method="post" role="form">

                <div asp-validation-summary="All" class="col-12"></div>

                <input type="hidden" asp-for="CommandModel.Id" />

                <input asp-for="CommandModel.Name" class="form-control mt-3"
                       placeholder="Namn" />

                <input asp-for="CommandModel.PhoneNumber" class="form-control mt-3"
                       placeholder="Telefonnummer" />

                <input asp-for="CommandModel.EmailAddress" class="form-control mt-3"
                       placeholder="Epostadress" />

                <input asp-for="CommandModel.Url" class="form-control mt-3"
                       placeholder="http://www.hejhej.se/glassbil" />

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/category/curate/@(Model.Category.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Spara
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
