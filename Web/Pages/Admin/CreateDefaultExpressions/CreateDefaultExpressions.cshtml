@page "/admin/createDefaultExpressions"
@model CreateDefaultExpressionsModel
@{
}

@section Meta {
    <title>
        Skapa grunduppsättning - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-lg-10 col-xl-8 col-xxl-6">

        <h4 class="ms-2 mt-3 mb-3">
            <i>
                Skapa en grunduppsättning av uttryck
            </i>
        </h4>

        <form method="post" role="form">

            <div class="form-check noselect ms-2 mb-4">
                <input asp-for="CommandModel.Confirmed" class="form-check-input" type="checkbox" />
                <label class="form-check-label" for="CommandModel_Confirmed">
                    Ja, jag är säker
                </label>
            </div>

            <div asp-validation-summary="All"></div>

            <div class="mt-2">
                <a role="button" class="btn btn-secondary me-2"
                   href="/admin/routines">
                    Avbryt
                </a>

                <button type="submit" class="btn btn-danger me-2">
                    Skapa
                </button>
            </div>

        </form>

    </div>
</main>
