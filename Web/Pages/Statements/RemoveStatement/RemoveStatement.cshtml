@page "/statement/remove/{id:int}"
@model RemoveStatementModel
@{
}

@section Meta {
    <title>
        Ta bort uttryck - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    ta bort ett uttryck från
                </i>
                
                <span class="ms-2" style="font-size:smaller">
                    <a href="/subject/curate/@(Model.Subject.Id)"
                       class="text-decoration-none">
                        @(Model.Subject.Category.Emoji)
                        @(Model.Subject.Name)
                    </a>
                </span>
            </h4>

            <h4 class="mt-3 ms-3">
                <span>
                    @(Model.Statement.Sentence)
                </span>
            </h4>

            <form method="post" role="form" class="mt-3">

                <div asp-validation-summary="All" class="col-12"></div>

                <input type="hidden" asp-for="CommandModel.Id" />

                <div class="form-check noselect ms-2 mb-4">
                    <input asp-for="CommandModel.Confirmed" class="form-check-input" 
                        type="checkbox" />

                    <label class="form-check-label" for="CommandModel_Confirmed">
                        Ja, jag är säker
                    </label>
                </div>

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/subject/curate/@(Model.Subject.Id)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Ta bort
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
