@page "/subject/{id:int}/adduserstatement"
@model AddUserStatementModel
@{
}

@section Meta {
    <title>
        Lägg till kommentar - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="col-12 col-sm-9 col-md-7 col-lg-5">

        <h4 class="ms-2 mt-3 mb-2">
            <i>
                @(Model.Subject.Name)
            </i>
        </h4>

        <div class="card">
            <div class="card-body">

                <form method="post" role="form">
                    <input type="hidden" asp-for="CommandModel.SubjectId" />

                    <input asp-for="CommandModel.Sentence" class="form-control mt-2"
                           placeholder="säg något om det" autofocus />

                    <div asp-validation-summary="All"></div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary me-2"
                           href="/subject/show/@(Model.CommandModel.SubjectId)">
                            Avbryt
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Lägg till
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</main>
