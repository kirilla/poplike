@page "/statement/movedown/{id:int}"
@model MoveStatementDownModel
@{
}

@section Meta {
    <title>
        Flytta ner uttryck - 
        @(Branding.WebsiteTitle)
    </title>
}

@section Header {
    <partial name="Navbar/_Navbar" model="Model.PageUserToken" />
}

<main class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <h4 class="ms-2 mt-3 mb-2">
                <i>
                    flytta ner uttryck
                </i>
            </h4>

            <form method="post" role="form">

                <input type="hidden" asp-for="CommandModel.Id" />

                <div class="mt-3">
                    <a class="btn btn-outline-secondary me-2"
                       href="/subject/curate/@(Model.Statement.SubjectId)">
                        Avbryt
                    </a>

                    <button type="submit" class="btn btn-secondary me-2">
                        Flytta ner
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>
